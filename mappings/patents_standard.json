{
  "settings":{
    "analysis":{
      "analyzer":{
        "analyzer1_standard":{
            "type":"custom",
            "tokenizer":"tokenizer1_standard",
            "filter": ["lowercase","filter3_synonym"]
        }
      },
        "tokenizer":{
          "tokenizer1_standard":{
            "type": "standard",
            "max_token_length": "256"
          }
        },
        "filter":{
          "filter3_synonym":{
            "type":"synonym",
            "format":"wordnet",
            "synonyms": [
              "s(100000001,1,'abstain',v,1,0).",
                "s(100000001,2,'refrain',v,1,0).",
                "s(100000001,3,'desist',v,1,0)."
            ]
          }
        }
      }
    },
    "mappings": {
       "sample_data": {
       "date_detection":"true",
       "dynamic_date_formats" : ["dd/MM/yyyy", "yyyy/MM/dd"],
          "dynamic_templates" : [
              {
                  "numeric_fields" : {
                      "match_mapping_type" : "integer || long",
                      "mapping" : {
                          "coerce":"true",
                          "doc_values":"true",
                          "include_in_all":"true",
                          "index":"not_analyzed",
                          "type" : "long",
                          "store":"true"
                      }
                  }
              },
              {
                  "object_fields" : {
                      "match_mapping_type" : "object",
                      "mapping" : {
                          "type" : "nested",
                          "dynamic": "true",
                          "include_in_all" : "true"
                      }
                  }
              },
              {
                  "date_fields" : {
                      "match_mapping_type" : "date",
                      "mapping" : {
                          "doc_values" : "true",
                          "include_in_all" : "true",
                          "index": "not_analyzed",
                          "store" : "true",
                          "format" : "yyyy/MM/dd || dd/MM/yyyy",
                          "type" : "date"
                      }
                  }
              },
              {
                  "boolean_fields" : {
                      "match_mapping_type" : "boolean",
                      "mapping" : {
                          "doc_values" : "true",
                          "type" : "boolean",
                          "include_in_all" : "false"
                      }
                  }
              },
              {
                  "string_fields" : {
                      "match_mapping_type" : "string",
                      "mapping" : {
                          "fields":{
                            "exact":{
                              "type" : "string",
                              "index": "not_analyzed",
                              "ignore_above": "256"
                            }
                          },
                          "type" : "string",
                          "analyzer": "analyzer1_standard",
                          "position_increment_gap": "50",
                          "term_vector" : "no"
                      }
                  }
              }
          ]
       }
    }
}
