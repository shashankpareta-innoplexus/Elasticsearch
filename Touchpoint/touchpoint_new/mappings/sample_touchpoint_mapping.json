{
   "settings": {
      "analysis": {
         "analyzer": {
            "autocomplete": {
               "type": "custom",
               "tokenizer": "tokenizer1_edgeNgram",
               "filter": [
                  "lowercase",
                  "filter_shingles"
               ]
            },
            "analyzer_keyword": {
               "type": "custom",
               "tokenizer": "keyword",
               "filter": "lowercase"
            }
         },
         "tokenizer": {
            "tokenizer1_edgeNgram": {
               "type": "edgeNGram",
               "min_gram": "1",
               "max_gram": "5",
               "token_chars": [
                  "letter",
                  "digit"
               ]
            }
         },
         "filter": {
            "filter_shingles": {
               "type": "shingle",
               "min_shingle_size": "2",
               "max_shingle_size": "3",
               "token_separator": " ",
               "output_unigrams": "true"
            }
         }
      }
   },
   "mappings": {
      "sample_data": {
         "date_detection": "False",
         "dynamic_templates": [
            {
               "string_selected_fields": {
                  "match": "name",
                  "match_pattern": "regex",
                  "match_mapping_type": "string",
                  "mapping": {
                     "type": "string",
                     "fields": {
                        "case_sensitive": {
                           "index": "not_analyzed",
                           "ignore_above": 256,
                           "type": "string",
                           "store": true
                        },
                        "case_insensitive": {
                           "analyzer": "analyzer_keyword",
                           "ignore_above": 256,
                           "type": "string",
                           "search_analyzer":"standard",
                           "store": true
                        },
                        "autocomplete": {
                           "type": "string",
                           "analyzer": "autocomplete",
                           "search_analyzer": "standard"
                        }
                     },
                     "analyzer": "standard"
                  }
               }
            },
            {
               "string_fields": {
                  "mapping": {
                     "type": "string",
                     "fields": {
                        "case_sensitive": {
                           "index": "not_analyzed",
                           "ignore_above": 256,
                           "type": "string",
                           "doc_values": false
                        }
                     }
                  },
                  "match_mapping_type": "string"
               }
            }
         ]
      }
   }
}
